<div class="container">
  <h1 class="rounded-gray"><%= @deck.deck_name %> Deck</h1>
</div>

  <div class="flashcard">
    <div class="flashcard-text"><p><%=@picked_card.question%></p>
    </div>
  </div>

<section class="guess-container">
  <form class="guess-form" action='/games/<%=@game.id%>/decks/<%=@deck.id%>/cards/<%=@picked_card.id%>' method= "POST">
    <input type="text" name="guess" placeholder="Type your answer here"><br><br>
    <input class="button" type= "submit" value="Submit">
  </form>
</section>

<section class="guess-container">
  <% if @guess %>
   <%= erb :'/_display_result', layout: false %>
  <% end %>
</section>



